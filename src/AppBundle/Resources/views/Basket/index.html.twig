{% extends "::base.html.twig" %}

{% block title %}AppBundle:Basket:index{% endblock %}

{% block body %}
    <h1>koszyk</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Opis</th>
                <th>Ilość</th>
            </tr>
        </thead>
        <tbody>
            {% for products in products_in_basket %}
                <tr>
                    <td>{{ products.id }}</td>
                    <td>{{ products.name }}</td>
                    <td>{{ products.price }}</td>
                    <td>{{ products.desc }}</td>
                    <td></td>

                </tr>
{% endfor %}
            </tbody>
            {% endblock %}
